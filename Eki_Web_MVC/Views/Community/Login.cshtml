<script type="text/javascript" language="javascript">

    function CheckForm()
    {
        if ($("#ComName").val().trim() == "" || $("#ComName").val().trim() == "輸入社區名稱") {
            alert("你尚未輸入社區名稱");
            document.forms[0]['ma_uid'].focus();
        } else if ($("#Password").val().trim() == "" || $("#Password").val().trim() == "xxxxxxxx") {
            alert("你尚未輸入密碼");
            document.forms[0]['ma_pwd'].focus();
        } else if ($("#ValidateCode").val() == "") {
            alert("你尚未輸入驗證碼");
            document.forms[0]['ma_chk'].focus();
        } else {
            document.forms[0].submit();
        }
    }

    //focus輸入框時按下enter=確認登入
    $('input').keyup(function (e) {
        if (e.keyCode == 13) {
            CheckForm();
        }
    });


</script>
